{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./*"
            ],
            "@src/*": [
                "./src/*"
            ],
        },
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".yarn"
    ]
}